{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": ["ES2022", "dom"],
    "strict": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "importHelpers": true,
    "noImplicitOverride": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "declarationMap": true,
    "pretty": true,
    "skipLibCheck": true,
    "checkJs": true
  },
  "include": ["src/**/*.ts"],
  "exclude": []
}
